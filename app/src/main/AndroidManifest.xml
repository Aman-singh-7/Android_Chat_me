<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="np.com.amansingh.chatme" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/whatapp_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatMe" >
        <activity
            android:name=".activities.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChatRoomActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DetailsFillUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.friendListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.otpActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activities.launcherActivity"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/Theme.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.agreementActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activities.phoneNumberLogin"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ChatMe.NoActionBar" />
    </application>

</manifest>